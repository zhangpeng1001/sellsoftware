<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.tw.sellsoftware.usercenter.mapper.VipInfoMapper" >
  <resultMap id="BaseResultMap" type="com.tw.sellsoftware.usercenter.domain.VipInfo" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="vip_grade" property="vipGrade" jdbcType="VARCHAR" />
    <result column="discount" property="discount" jdbcType="DECIMAL" />
    <result column="vip_desc" property="vipDesc" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, vip_grade, discount, vip_desc
  </sql>

  <select id="selectVipInfoById" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select
    <include refid="Base_Column_List" />
    from t_vip_info
    where id = #{id,jdbcType=INTEGER}
  </select>
  
  <select id="getRandomVipInfo" resultMap="BaseResultMap" >
    select 
    <include refid="Base_Column_List" />
    from t_vip_info ORDER BY RAND() LIMIT 1
  </select>
</mapper>